{% macro listingWithSelect(listing = []) %}
  {% for item in listing %}
    {% set heading = item.heading %}
    {% set href = item.href %}
    {% set content = item.content %}

    <div class="proto-listing nhsuk-u-reading-width {{ classes }}">
      <ul class="nhsuk-list">
        <li class="nhsuk-list-item">
          <div class="nhsuk-checkboxes">
            <div class="nhsuk-checkboxes__item">
              <input
                class="nhsuk-checkboxes__input"
                id="user-select-{{ loop.index }}"
                name="user-select"
                type="checkbox"
                value="{{ loop.index }}"
              >
              <label
                class="nhsuk-label
                nhsuk-checkboxes__label"
                for="user-select-{{ loop.index }}"
              >
                <h2 class="nhsuk-heading-s nhsuk-u-margin-bottom-3">
                  {{ heading | safe }}
                </h2>
              </label>

              <p class="nhsuk-body-s nhsuk-u-margin-bottom-0">
                {{ content | safe }}
              </p>
            </div>
          </div>

          <hr class="nhsuk-u-margin-top-4 nhsuk-u-margin-bottom-4">
        </li>
      </ul>
    </div>
  {% endfor %}
{% endmacro %}
